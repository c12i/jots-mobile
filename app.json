{
    "expo": {
        "name": "Jots",
        "slug": "jots-mobile",
        "description": "Public/ Social notes",
        "privacy": "public",
        "version": "1.0.0",
        "platforms": ["ios", "android"],
        "orientation": "portrait",
        "icon": "./assets/custom/icon.png",
        "splash": {
            "image": "./assets/custom/splash.png",
            "resizeMode": "cover",
            "backgroundColor": "#333"
        },
        "updates": {
            "fallbackToCacheTimeout": 1500
        },
        "assetBundlePatterns": ["**/*"],
        "ios": {
            "supportsTablet": true,
            "icon": "./assets/custom/icon.png"
        },
        "android": {
            "adaptiveIcon": {
                "foregroundImage": "./assets/custom/icon.png",
                "backgroundColor": "#4A90E2"
            },
            "package": "tk.muriuki"
        },
        "web": {
            "favicon": "./assets/favicon.png"
        }
    }
}
